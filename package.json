{
  "name": "opera-toolkit",
  "version": "0.69.0",
  "description": "Opera Web UI Toolkit",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "mocha 'test/**/*.spec.js'",
    "test:server": "node test/server.js",
    "demo": "node demo/server.js",
    "coverage": "nyc mocha",
    "eslint": "eslint src/core/*.js test/*.spec.js",
    "release": "node build.js",
    "update-opera": "node build.js && cp dist/toolkit-0.69.0.js $WORK_DIR",
    "watch": "npm-watch update-opera"
  },
  "pre-commit": [
    "release",
    "eslint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/operasoftware/toolkit.git"
  },
  "keywords": [
    "opera",
    "web ui",
    "toolkit",
    "native",
    "javascript",
    "framework",
    "virtual dom"
  ],
  "author": "Aleksander Åšwitalski",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/operasoftware/toolkit/issues"
  },
  "homepage": "https://github.com/operasoftware/toolkit#readme",
  "devDependencies": {
    "assert": "^2.0.0",
    "dom-test": "^0.4.0",
    "eslint": "^8.6.0",
    "express": "^4.17.3",
    "lazy-module-loader": "^1.0.2",
    "mocha": "^9.1.3",
    "npm-watch": "^0.11.0",
    "nyc": "^15.1.0",
    "path": "^0.12.7",
    "pre-commit": "^1.2.2",
    "sinon": "^12.0.1",
    "tap": "^15.1.6"
  },
  "watch": {
    "update-opera": {
      "patterns": [
        "src",
        "test"
      ],
      "extensions": "js",
      "quiet": true
    }
  }
}
